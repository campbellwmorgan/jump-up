###
See each of the modules
in the lib/modules
directory for specifications

Each part must have
  type: [the type specified at the top of each module]
  dir: [the relative path to root to watch in] (must have trailing /)

###
module.exports =
  # this is runs the unit tests
  # for jump up
  jumpup:
    root: __dirname + '/'
    parts: [
      {
        type: 'coffeelint'
        dir: 'lib/'
      }
      {
        type: 'jasmine-local'
        testDir: 'test/'
        perFile: true
        dir: 'lib/'
        coffee: true
        verbose: true
        debounce: 100
      }
    ]
  default:
    root: '/director1/'
    parts:[
      {
        type: 'coffee'
        dir: 'public/coffee/'
        outputDir: 'public/javascripts/'
      }
      {
        type: 'sass'
        dir: 'public/sass/'
        singleFile:[
          {
            input: 'style.sass'
            output: '../stylesheets/style.css'
          }
        ]
      }
    ]
  section2:
    root: '/home/user/section2/'
    parts:[
      {
        type: 'php'
        dir: 'phpApp/'
      }
      {
        type: 'phpunit'
        dir: 'phpApp/'
        test: 'monit/.test/'
      }
    ]
